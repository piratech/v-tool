<%= form_for(@projector) do |f| %>
  <% if @projector.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@projector.errors.count, "error") %> prohibited this projector from being saved:</h2>

      <ul>
      <% @projector.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Name: <%= f.text_field :name %>
  </div>
  <div class="field">
  	Slide: 
    <select id="art" name="projector[slide_id]">
		<% @slides.each do |slide| %>
			<option value="<%=slide.id%>" <%= " selected" if @projector.slide == slide %>><%=slide.name%></option>
		<% end %>
	</select>
  </div>
  <div class="field">
  	Timer anzeigen: <%= f.check_box :has_timer %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Beamer speichern"%>
  </div>
<% end %>