<h1>Listing projectors</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Slide</th>
    <th>
    	<% if @write_right then %>
    	<div class="btn-toolbar">
		  <div class="btn-group">
	    	<a class="btn" href="#" onclick='$.post("<%= url_for :controller => "projectors", :action => "command"  %>", { "command[cmd]": "ident"} );'>	<i class="icon-search"></i></a>
	    	<a class="btn" href="#" onclick='$.post("<%= url_for :controller => "projectors", :action => "command"  %>", { "command[cmd]": "reload"} );'>	<i class="icon-repeat"></i></a>
	      </div>
	      <div class="btn-group">
	    	<a class="btn" href="#" onclick='ShowFlashMenu();'>		<i class="icon-bullhorn"></i></a>
	    	<a class="btn" href="#" onclick='$.post("<%= url_for :controller => "projectors", :action => "command"  %>", { "command[cmd]": "flash"} );'>	<i class="icon-fullscreen"></i></a>
	      </div>
	    </div>
	    <% end %>
    </th>
  </tr>
  <tr id="flash" style="overflow: hidden;">
  	<td colspan="3" style="display: none;" id="flash-data">
  		<form  method="post" action="<%= url_for :controller => "projectors", :action => "command"  %>">
    	 	<input type=hidden name="command[cmd]" value="flash" />
    	 	<input type=text name="command[text]" class="input-xxlarge"  placeholder="Naricht"/><br />
    	 	<select name="command[time]">
				  <option value="30">30 Sekunden anzeigen</option>
				  <option value="60">1 Minuten anzeigen</option>
				  <option value="120">2 Minuten anzeigen</option>
				  <option value="180">3 Minuten anzeigen</option>
				  <option value="300">5 Minuten anzeigen</option>
				  <option value="0">DurchgÃ¤ngig anzeigen</option>
			</select><br />
				Als
				<input type=submit name="command[name]" value="danger" 	class="btn btn-danger"/>
				<input type=submit name="command[name]" value="information" class="btn btn-info" />
				<input type=submit name="command[name]" value="success" 	class="btn btn-success"/> 
				anzeigen.
    	</form>
  	</td>
  </tr>

<% @projectors.each do |projector| %>
  <tr class="projector-data">
    <td><%= projector.name %></td>
    <td><%= projector.slide.name rescue "-NONE-" %></td>
    <td>
    	<div class="btn-toolbar">
		  <div class="btn-group">
		  	<% if @write_right then %>
		 	<a class="btn" href="<%= url_for edit_projector_path(projector) %>">										<i class="icon-wrench"></i></a>
		 	<% end %>
		 	<a class="btn" href="<%= url_for projector %>" target="_blank">												<i class="icon-eye-open"></i></a>
		  </div>
		  <% if @write_right then %>
		  <div class="btn-group">
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "scroll-up"} );'>		<i class="icon-chevron-down"></i></a>
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "scroll-null"} );'>	<i class="icon-minus"></i></a>
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "scroll-down"} );'>	<i class="icon-chevron-up"></i></a>
		  </div>
		  <div class="btn-group">
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "zoom-in"} );'>		<i class="icon-zoom-in"></i></a>
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "zoom-out"} );'>		<i class="icon-zoom-out"></i></a>
		  </div>
		  <div class="btn-group">
		    <a class="btn" href="#" onclick='$.post("<%= url_for projector %>", { "command[cmd]": "reload"} );'>		<i class="icon-repeat"></i></a>
		    <a class="btn" href="<%= url_for projector %>" data-confirm="Bist du sicher?" data-method="delete" rel="nofollow"><i class="icon-trash"></i></a>
		  </div>
		  <% end %>
		</div>		
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Projector', new_projector_path %>
