<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div>
  	<ul class="unstyled">
  		<li>
  			<label class="checkbox" style="margin-left: -20px;">
				<input type="radio" name="item[parent_id]" value="" style="position: absolute; left: 5px;" <%= "checked" if @item.is_root? %>> ROOT
			</label>
			<ol>
				<%= render "radio", :items => @items %>
			</ol>
		</li>
  	</ul>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
