<% if !@broadcast then %>
<div id="body">
	<div id="slides">
		<div class="slide" id="slide-<%= @slide.id %>">
<% end %>
<%= render 'show'%>
<% if !@broadcast then %>
		</div>
	</div>
</div>
<% if @slide.live? %>
<script type="text/javascript" charset="utf-8">
    push.subscribe("slide-<%=@slide.id%>", function(data){
      document.getElementById("slide-<%= @slide.id %>").innerHTML= data["data"];
    });
</script>
<% else %>
<div class="archiv">ARCHIV</div>
<% end %>
<% end %>