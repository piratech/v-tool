<% if !@broadcast then %>
<div id="body">
<% end %>
<%= render 'show'%>
<% if !@broadcast then %>
</div>
<script type="text/javascript" charset="utf-8">
    push.subscribe("slide-<%=@slide.id%>", function(data){
      document.getElementById("body").innerHTML= data["data"];
    });
</script>
<% end %>